
{%- for block in section.blocks -%}
{%- case block.type -%}
  {%- when 'banner' -%}
<div class="image-with-text image-with-text--full-width">
  <div class="image-with-text__grid color- grid grid--gapless grid--1-col grid--2-col-tablet page-width">
       <div class="grid__item">
      <div class="image-with-text__content image-with-text__content--{{ section.settings.height }}">
              <h5 class="sub_heading_txt">{{ block.settings.title_sub | escape }}</h5> 
              <h2 class="image-with-text__heading h1">
                {{ block.settings.title | escape }}
              </h2>
               <div class="img_text_content"> {{ block.settings.content_txt | escape }}</div>
         <div class="banner_button">
            <a href="{{ block.settings.iphone_link }}" class="button button--secondary button--primary "><img src="{{ 'App_store.png' | asset_url }}" alt=""></a>
             <a href="{{ block.settings.android_link }}" class="button button--secondary button--primary "><img src="{{ 'play_store.png' | asset_url }}" alt=""></a>
        </div>
      </div>
    </div>
    <div class="grid__item">
      <div class="image-with-text__media image-with-text__media--large media" >
        {%- if block.settings.image != blank -%}
          <img srcset="{%- if section.settings.image.width >= 165 -%}{{ block.settings.image | img_url: '165x' }} 165w,{%- endif -%}
            {%- if block.settings.image.width >= 360 -%}{{ block.settings.image | img_url: '360x' }} 360w,{%- endif -%}
            {%- if block.settings.image.width >= 535 -%}{{ block.settings.image | img_url: '535x' }} 535w,{%- endif -%}
            {%- if block.settings.image.width >= 720 -%}{{ block.settings.image | img_url: '720x' }} 720w,{%- endif -%}
            {%- if block.settings.image.width >= 940 -%}{{ block.settings.image | img_url: '940x' }} 940w,{%- endif -%}
            {%- if block.settings.image.width >= 1070 -%}{{ block.settings.image | img_url: '1070x' }} 1070w{%- endif -%}"
            src="{{ block.settings.image | img_url: '533x' }}"
            sizes="(min-width: 1100px) 535px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="520"
            height="550"
          >
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
    </div>
  </div>
</div>
{%- when 'video' -%}
<div class="rich-text video rich-text--full-width page-width">
  <div class="rich-text__blocks">
     <h3 class="title_sub_vid">{{ block.settings.title_sub_vid | escape }}</h3>
     <h2 class="h1 title_vid">{{ block.settings.vid_title | escape }}</h2>
    <div class="video_ifrmae">
    <iframe width="100%" height="550" src="https://www.youtube.com/embed/{{ block.settings.product_description_video.id }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
  </div>

</div>

{%- when 'button' -%}

<div class="rich-text video rich-text--full-width page-width">
  {% if block.settings.pdf_link != blank and  block.settings.lang_link != blank  %}
  <div class="video_button">
   <a href="{{ block.settings.pdf_link }}" class="button button--secondary button--primary ">Download PDF</a>
   <a href="{{ block.settings.lang_link }}" class="button button--secondary button--primary ">Other languages</a>
  </div>
  {% endif %}
</div>
{%- when 'tab' -%}
  <div class="sidebar  page-width">
    <div class="sidebar_section">
      <div class="section_title">
        <a href="#step1" class="step_section" >{{ block.settings.step_1 }}</a>
      </div>
         <div class="section_title">
        <a href="#step1" class="step_section" >{{ block.settings.step_2 }}</a>
      </div>
         <div class="section_title">
        <a href="#step1" class="step_section" >{{ block.settings.step_3 }}</a>
      </div>
    </div>
    <div class="content_section"> 
     <div class="section_content" id="step1">
       <div class="section_step_1">
       <h5>{{ block.settings.step_1_sub_title }}</h5>
       <h2>{{ block.settings.step_1_title }}</h2>
         <div class="image-with-text__media image-with-text__media--large media" >
        {%- if block.settings.image_step1 != blank -%}
          <img srcset="{%- if section.settings.image_step1.width >= 165 -%}{{ block.settings.image_step1 | img_url: '165x' }} 165w,{%- endif -%}
            {%- if block.settings.image_step1.width >= 360 -%}{{ block.settings.image_step1 | img_url: '360x' }} 360w,{%- endif -%}
            {%- if block.settings.image_step1.width >= 535 -%}{{ block.settings.image_step1 | img_url: '535x' }} 535w,{%- endif -%}
            {%- if block.settings.image_step1.width >= 720 -%}{{ block.settings.image_step1 | img_url: '720x' }} 720w,{%- endif -%}
            {%- if block.settings.image_step1.width >= 940 -%}{{ block.settings.image_step1 | img_url: '940x' }} 940w,{%- endif -%}
            {%- if block.settings.image_step1.width >= 1070 -%}{{ block.settings.image_step1 | img_url: '1070x' }} 1070w{%- endif -%}"
            src="{{ block.settings.image_step1 | img_url: '533x' }}"
            sizes="(min-width: 1100px) 535px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
            alt="{{ block.settings.image_step1.alt | escape }}"
            loading="lazy"
            width="520"
            height="550"
          >
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div> 
       <div class="desc_text">
         {{ block.settings.step_1_txt }}
       </div>
      </div>
       <div class="section_step_1">
       <h5>{{ block.settings.step_1_sub_title1 }}</h5>
       <h2>{{ block.settings.step_1_title1 }}</h2>
        <div class="desc_text_sec">
         {{ block.settings.step_1_txt1 }}
       </div>
       </div>
         <div class="section_step_1">
       <h5>{{ block.settings.step_1_sub_title2 }}</h5>
       <h2>{{ block.settings.step_1_title2 }}</h2>
        <div class="desc_text_sec">
         {{ block.settings.step_1_txt2 }}
       </div>
       </div>
         <div class="section_step_1">
       <h5>{{ block.settings.step_1_sub_title3 }}</h5>
       <h2>{{ block.settings.step_1_title3 }}</h2>
        <div class="desc_text_sec">
         {{ block.settings.step_1_txt3 }}
       </div>
       </div>
      </div>
    <div class="section_content" id="step2">
         <div class="section_step_2">
           <h5>{{ block.settings.step_2_sub_title }}</h5>
           <h2>{{ block.settings.step_2_title }}</h2>
           <div class"step_sec_col">
              <div class"step_sec_row">{{ block.settings.step_2_txt1 }}</div>
              <div class"step_sec_row">{{ block.settings.step_2_txt2 }}</div>
             <div class"step_sec_row">{{ block.settings.step_2_txt3 }}</div>
             <div class"step_sec_row">{{ block.settings.step_2_txt4 }}</div>
             <div class"step_sec_row">{{ block.settings.step_2_txt5 }}</div>
             <div class"step_sec_row">{{ block.settings.step_2_txt6 }}</div>
             <div class"step_sec_row">{{ block.settings.step_2_txt7 }}</div>
             <div class"step_sec_row">{{ block.settings.step_2_txt8 }}</div>
             <div class"step_sec_row">{{ block.settings.step_2_txt9 }}</div>
           </div>
         </div>
    </div>
     <div class="section_content" id="step3">
                 
    </div>
    </div>
  </div>
  {%- endcase -%}
{%- endfor -%}

